{
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"printWidth": 80,
	"bracketSpacing": true,
	"trailingComma": "es5",
	"importOrder": [
		"^(react|next?/?[a-zA-Z]*))$",
		"<THIRD_PARTY_MODULES>",
		"^@/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	]
}
